<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>TipOfTheDayWeb</display-name>
  <context-param>
    <param-name>tapestry.app-package</param-name>
    <param-value>com.googlecode.gradlesamples.tipoftheday.t5</param-value>
  </context-param>
  <servlet>
    <description></description>
    <display-name>TipOfTheDayServlet</display-name>
    <servlet-name>TipOfTheDayServlet</servlet-name>
    <servlet-class>com.googlecode.gradlesamples.tipoftheday.servlets.TipOfTheDayServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TipOfTheDayServlet</servlet-name>
    <url-pattern>/TipOfTheDayServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>app</filter-name>
    <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>app</filter-name>
    <url-pattern>/Tapestry/*</url-pattern>
  </filter-mapping>
  <ejb-local-ref>
    <ejb-ref-name>ejb/TipOfTheDay</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <local>com.googlecode.gradlesamples.tipoftheday.ejb.TipOfTheDayBeanLocal</local>
  </ejb-local-ref>
  <servlet>
    <description></description>
    <display-name>TipOfTheDayJSONServlet</display-name>
    <servlet-name>TipOfTheDayJSONServlet</servlet-name>
    <servlet-class>com.googlecode.gradlesamples.tipoftheday.servlets.TipOfTheDayJSONServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TipOfTheDayJSONServlet</servlet-name>
    <url-pattern>/TipOfTheDayJSONServlet</url-pattern>
  </servlet-mapping>
</web-app>