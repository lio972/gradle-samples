<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>TipOfTheDayWeb</display-name>
	<servlet>
		<description></description>
		<display-name>TipOfTheDayServlet</display-name>
		<servlet-name>TipOfTheDayServlet</servlet-name>
		<servlet-class>com.googlecode.gradlesamples.tipoftheday.servlets.TipOfTheDayServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TipOfTheDayServlet</servlet-name>
		<url-pattern>/TipOfTheDayServlet</url-pattern>
	</servlet-mapping>
	<ejb-local-ref>
		<ejb-ref-name>ejb/TipOfTheDay</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local>com.googlecode.gradlesamples.tipoftheday.ejb.TipOfTheDayBeanLocal</local>
	</ejb-local-ref>
</web-app>